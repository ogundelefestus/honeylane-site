<style type="text/css">
	*{
	    font-family: 'Ubuntu', sans-serif;
	}
</style>
<div class="container bg-info p-5">
  <div style="padding: 15px; background-color: white;">
    <a href="/admin/dashboard"> Admin Dashboard</a>
  </div>
</div>
<div class="container" style="margin-top: 10px;">
	<h2 style="text-align: center;">Students Results Page - Manage Students Result Here</h2>
	<table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Student Name</th>
                <th scope="col">Class</th>
                <th scope="col">Age</th>
                <th scope="col">Sex</th>
                <th scope="col">Religion</th>
                <th scope="col">Term Joined</th>
                <th scope="col">State of Origin</th>
                <th scope="col">Manage Student</th>
              </tr>
            </thead>
            {{# each students}}
            <tbody>
              
              <tr>
                <td>{{ fullname }}</td>
                <td>{{ class }}</td>
                <td>{{ age }} years old</td>
                <td>{{ sex }}</td>
                <td>{{ religion }}</td>
                <td>{{ term_joined }}</td>
                <td>{{ state_of_origin }}</td>
                <td>
                    <!-- <a class="btn btn-info" role="button" data-toggle="modal" data-target="#editModal">Edit</a> -->
                    <a class="btn btn-sm btn-danger" href="/admin/manage-result/{{_id}}"><i class="fas fa-trash-alt"></i> manage</a>    
                </td>
              </tr>
            </tbody>
            {{/each}}
          </table>
</div>